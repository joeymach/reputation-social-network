{
  "compilerOptions": {
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "outDir": "./build",
      "rootDir": "./source",
      "target": "es6",
      "skipLibCheck": true,
      "strict": true,
      "strictPropertyInitialization": false
  }
}